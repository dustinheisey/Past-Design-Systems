<footer class="bg-img">
  {# {% svg "./assets/footer-background.svg" %} #}
  <img src="/assets/footer-background.svg" alt="" />
  <div class="full stack align-center region">
    <div class="cluster justify-between full gap-xl align-start">
      <div class="stack gap-xs prose">
        <h3 class="title-headline">Subscribe to My Newsletter</h3>
        <p class="measure-s">
          Get weekly updates on web accessibility and sustainability trends, case studies, and tutorials in my newsletter. Stay informed on best practices and resources to build an inclusive, eco-friendly digital presence.
        </p>
        <form class="input-group sidebar gap-0" name="newsletter" method="POST" data-netlify="true">
          <label class="sr-only required" for="newsletter-email">Email Address</label>
          <input type="email" id="newsletter-email" name="newsletter-email" class="input" placeholder="Email Address" required>
          <button type="submit" class="fixed btn btn-primary">Subscribe</button>
        </form>
      </div>
      <div class="cluster gap-2xl align-start">
        {% for group in navigation.footer.groups %}
        <div class="stack stack-bg gap-2xs">
          <h3 class="title-headline">{{group.title}}</h3>
          <ul class="stack gap-xs">
            {% for link in group.links %}
            <li>
              <a href="{{ link.url }}" class="link link-s link-navigation">
                {{ link.label }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}
      </div>
    </div>
    <hr>
    <div class="cluster full justify-between">
      <ul class="cluster gap-xs">
        {% for link in navigation.footer.social %}
        <li>
          <a href="{{link.url}}" class="btn btn-circular">
            <span class="sr-only">{{link.label}}</span>
            <svg focusable="false" class="icon">
              <use href="/assets/icons.svg#logo-{{link.icon}}"></use>
            </svg>
            <tool-tip tip-position="block-start">
              {{link.label}}
            </tool-tip>
          </a>
        </li>
        {% endfor %}
      </ul>
      {# <div id="wcb" class="copywrite"></div>
      <script src="https://unpkg.com/website-carbon-badges@1.1.3/b.min.js" defer></script> #}
      <small class="copywrite">Â© 2023 Dustin Heisey, All rights reserved.</small>
    </div>
  </div>
</footer>