{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@elements/*": ["src/elements/*"],
      "@layouts/*": ["src/layouts/*"],
      "@patterns/*": ["src/patterns/*"]
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"]
}
