<div class="cover sidebar reverse sidebar-split gap-m theme-{{props.theme or 'background'}}">
    <div class="frame-cover">
        {% set src = './public/img/' + props.content.img.src %}
        {% img src, props.content.img.alt %}
    </div>
    <div class="stack fixed gap-xl">
        <div class="prose auto">
            <h1 class="hero-headline">{{props.content.headline}}</h1>
            <p>
                {{props.content.body}}
            </p>
            <a href="{{props.content.btn.href}}" class="btn {% if props.content.btn.variant %}{{props.content.btn.href}}{% endif %}">{{props.content.btn.label}}</a>
        </div>
    </div>
</div>