<div class="region sidebar sidebar-split gap-m">
    <div class="frame square">
        {% set src = './public/img/' + props.content.img.src %}
        {% img src, props.content.img.alt %}
    </div>
    <section class="fixed prose">
        <p class="overline">{{props.content.overline}}</p>
        <h2 class="region-headline">{{props.content.headline}}</h2>
        <p>{{props.content.body}}</p>
        <a href="{{props.content.action.url}}" class="btn {% if props.content.action.variant %}btn-{{props.content.action.variant}}{% endif %}">{{props.content.action.label}}</a>
    </section>
</div>