<div class="region bg-pattern pattern-topography theme-{{props.theme or 'background'}} inset-xl">
    <section class="prose">
        <h2 class="region-headline">{{props.content.headline}}</h2>
        <p class="{% if props.center %}auto{% endif %}">{{props.content.body}}</p>
        <a href="{{props.content.btn.href}}" class="btn {% if props.content.btn.variant %}{{props.content.btn.href}}{% endif %}">{{props.content.btn.label}}</a>
    </section>
</div>