<div class="region theme-{{props.theme}} stack gap-xl">
    <div class="prose">
        {% if props.content.badge %}
        <a href="/" class="badge badge-primary">{{props.content.badge}}</a>
        {% endif %}
        <h1>{{props.content.headline}}</h1>
        <p>
            {{props.content.body}}
        </p>
        <a href="{{props.content.btn.href}}" class="btn">{{props.content.btn.label}}</a>
    </div>
    <div class="frame full">
        {% img props.content.img.src, props.content.img.alt %}
    </div>
</div>