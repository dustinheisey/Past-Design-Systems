<div class="stack region">
    <section class="prose center center-intrinsic">
        <h2 class="region-headline">{{props.content.headline}}</h2>
    </section>
    <div class="grid grid-4 align-start gap-xl">
        {% for blurb in props.content.blurbs %}
        <div class="prose stack center-intrinsic gap-2xs">
            {% if blurb.icon %}
            {% icon blurb.icon, "icon-xl" %}
            {% endif %}
            <h3 class="title-headline">{{blurb.headline}}</h3>
            {% if blurb.body %}
            <p>{{blurb.body}}</p>
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>